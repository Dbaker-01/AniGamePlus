{
    "manifest_version": 2,
    "name": "AniGame +",
    "version": "1.0",


    "description": "Look up videogame and anime items (ex: games, accesories, consoles. etc...)",

    "background":{
        "scripts":["agSearch.js"]
    },


    "permissions":[
        "*://www.walmart.com/*",
        "*://www.gamestop.com/*",
        "*://www.crunchyroll.com/*",
        
        "webNavigation",
        "storage"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "AniGame+",
        "default_popup": "index.html"

    }
    
}
