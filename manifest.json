{
    "manifest_version": 2,
    "name": "AniGame +",
    "version": "1.0",


    "description": "Look up videogame and anime items (ex: games, accesories, consoles. etc...)",
    "content_scripts":  [
        {
            "matches": ["*://www.mozilla.org/*"],
            "js": ["agSearch.js"]
            
        }
    ],
    "permissions": [
        "webNavigation",
        "storage"

    ],

    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "AniGame+",
        "default_popup": "search.html"

    }
}